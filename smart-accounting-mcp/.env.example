# 服务器配置
PORT=8083
# 定义哪些网站/域名可以访问MCP服务器
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
LOG_LEVEL=info
HEARTBEAT_INTERVAL=30000

# 安全配置
JWT_SECRET=your_jwt_secret_here 

# 存储模式: 'file' | 'api'
STORAGE_MODE=api

# 文件存储模式下的数据库路径
DB_PATH=db.json

# API存储模式配置
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=10000

# 用户认证信息 (首次使用需要配置)
# 注册/登录后会自动更新API_TOKEN和USER_ID
USER_EMAIL=
USER_PASSWORD=