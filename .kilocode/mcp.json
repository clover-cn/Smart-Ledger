{
  "mcpServers": {
    "wolframalpha": {
      "command": "node",
      "args": [
        "D:/MPC/wolframalpha-llm-mcp/build/index.js"
      ],
      "env": {
        "WOLFRAM_LLM_APP_ID": "E9YLUR-EVJX7HYLR2"
      },
      "disabled": false,
      "autoApprove": [
        "ask_llm",
        "get_simple_answer",
        "validate_key"
      ],
      "alwaysAllow": [
        "ask_llm",
        "get_simple_answer",
        "validate_key"
      ]
    },
    "sequentialthinking": {
      "command": "node",
      "args": [
        "D:/MPC/sequentialthinking/servers/src/sequentialthinking/dist/index.js"
      ],
      "disabled": false,
      "autoApprove": [
        "sequential_thinking"
      ],
      "alwaysAllow": [
        "sequentialthinking"
      ]
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ],
      "alwaysAllow": [
        "fetch"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "alwaysAllow": [
        "get-library-docs",
        "resolve-library-id"
      ]
    },
    "bingcn": {
      "command": "npx",
      "args": [
        "bing-cn-mcp"
      ],
      "alwaysAllow": [
        "bing_search",
        "fetch_webpage"
      ]
    },
    "smart-trigger-mcp": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "http://127.0.0.1:8007/mcp"
      ],
      "disabled": false,
      "alwaysAllow": [
        "analyze_intent",
        "get_recommendations",
        "recommend_by_brand",
        "get_all_products",
        "get_all_ads"
      ],
      "disabledTools": []
    },
    "smart-accounting-mcp": {
      "url": "http://127.0.0.1:8083/sse",
      "transport": "sse",
      "alwaysAllow": [
        "recordTransaction"
      ]
    }
  }
}